<!-- res/drawable/radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the RadioButton is checked (selected) -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorSelected"/> <!-- Color when selected -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- When the RadioButton is not checked (unselected) -->
    <item>
        <shape>
            <solid android:color="@color/colorUnselected"/> <!-- Color when unselected -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>

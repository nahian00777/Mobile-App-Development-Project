<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#3F51B5" /> <!-- Progress color -->
            </shape>
        </clip>
    </item>
</layer-list>

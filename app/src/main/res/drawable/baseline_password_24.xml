<?xml version="1.0" encoding="utf-8"?>
<password-policy xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Minimum password length -->
    <min-length android:value="8" />

    <!-- Minimum number of letters -->
    <min-letters android:value="1" />

    <!-- Minimum number of numeric characters -->
    <min-numeric android:value="1" />

    <!-- Minimum number of special characters -->
    <min-symbols android:value="1" />

    <!-- Minimum number of non-letter characters -->
    <min-nonletter android:value="1" />

    <!-- Maximum password length -->
    <max-length android:value="16" />

</password-policy>
